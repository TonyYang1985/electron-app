<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- 基本的应用沙盒权限 -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- 允许继承权限（对于主进程和渲染进程通信很重要）-->
    <key>com.apple.security.inherit</key>
    <true/>
    
    <!-- 网络权限 -->
    <!-- 允许应用发起网络连接 -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- 允许应用作为网络服务器（如果需要本地服务器）-->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- 文件系统权限 -->
    <!-- 允许读写用户选择的文件 -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- 允许访问下载文件夹 -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- 允许访问用户主目录 -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>
    
    <!-- 允许访问文档目录 -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    
    <!-- 设备权限 -->
    <!-- 允许访问摄像头（如果应用需要）-->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- 允许访问麦克风（如果应用需要）-->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- 允许访问 USB 设备（如果应用需要）-->
    <key>com.apple.security.device.usb</key>
    <true/>
    
    <!-- 自动化和脚本权限 -->
    <!-- 允许应用自动化其他应用 -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- 系统权限 -->
    <!-- 允许访问打印机 -->
    <key>com.apple.security.print</key>
    <true/>
    
    <!-- 允许访问通讯录（如果需要）-->
    <key>com.apple.security.personal-information.addressbook</key>
    <false/>
    
    <!-- 允许访问日历（如果需要）-->
    <key>com.apple.security.personal-information.calendars</key>
    <false/>
    
    <!-- 允许访问位置信息（如果需要）-->
    <key>com.apple.security.personal-information.location</key>
    <false/>
    
    <!-- 允许访问照片库（如果需要）-->
    <key>com.apple.security.personal-information.photos-library</key>
    <false/>
    
    <!-- Electron 特定权限 -->
    <!-- 允许 JIT 编译（对于 V8 引擎很重要）-->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- 允许无符号可执行内存（对于某些 Node.js 模块很重要）-->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- 允许 DYLD 环境变量（对于某些原生模块很重要）-->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- 硬化运行时权限 -->
    <!-- 允许加载未签名的库（如果有原生依赖）-->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- 临时文件夹权限 -->
    <key>com.apple.security.temporary-exception.files.absolute-path.read-write</key>
    <array>
        <string>/tmp/</string>
        <string>/var/folders/</string>
    </array>
    
    <!-- 允许访问用户数据目录 -->
    <key>com.apple.security.temporary-exception.files.home-relative-path.read-write</key>
    <array>
        <string>Library/Application Support/My Awesome App/</string>
        <string>Library/Preferences/com.tonyyang1985.myawesomeapp.plist</string>
        <string>Library/Logs/My Awesome App/</string>
    </array>
    
    <!-- 允许使用钥匙串（如果需要存储敏感信息）-->
    <key>keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.tonyyang1985.myawesomeapp</string>
    </array>
</dict>
</plist>